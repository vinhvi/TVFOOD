<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBack_fodd_ìnor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/back_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_food_infor"
        android:layout_width="186dp"
        android:layout_height="144dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/btnBack_fodd_ìnor"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image" />

    <TextView
        android:id="@+id/tv_NameFood_infor"
        android:layout_width="370dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_food_infor"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/image_food_infor"
        app:layout_constraintTop_toBottomOf="@+id/image_food_infor" />

    <TextView
        android:id="@+id/tv_PriceFood_infor"
        android:layout_width="366dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_NameFood_infor"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/tv_NameFood_infor"
        app:layout_constraintTop_toBottomOf="@+id/tv_NameFood_infor" />

    <MultiAutoCompleteTextView
        android:id="@+id/mtv_Review_infor"
        android:layout_width="368dp"
        android:layout_height="152dp"
        android:layout_marginTop="8dp"
        android:text="Mô tả"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_PriceFood_infor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_PriceFood_infor"
        app:layout_constraintTop_toBottomOf="@+id/tv_PriceFood_infor" />

    <TextView
        android:id="@+id/tv_SL"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnn_Tru"
        app:layout_constraintStart_toEndOf="@+id/btnn_Tru"
        app:layout_constraintTop_toTopOf="@+id/btnn_Tru"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnn_Tru"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:background="#00000000"
        android:drawableBottom="@drawable/tru_food"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/mtv_Review_infor"
        app:layout_constraintTop_toBottomOf="@+id/mtv_Review_infor" />

    <Button
        android:id="@+id/btn_Cong"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:drawableBottom="@drawable/cong_food"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SL"
        app:layout_constraintEnd_toEndOf="@+id/mtv_Review_infor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_SL"
        app:layout_constraintTop_toTopOf="@+id/tv_SL"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAdd_food_infor"
        android:layout_width="268dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EC0909"
        android:text="Thêm vào giỏ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_SL" />

</androidx.constraintlayout.widget.ConstraintLayout>