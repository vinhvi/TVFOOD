<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rcv_food_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_location_1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="185dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:text="209/1 Cây Trâm"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="39dp"
        android:layout_height="31dp"
        android:background="#00000000"
        android:drawableRight="@drawable/moreif"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="51dp"
        android:layout_height="31dp"
        android:layout_marginStart="48dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edt_Name"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/search"
        android:ems="10"
        android:hint="Tìm kiếm ..."
        android:inputType="textPersonName"
        android:shadowRadius="40"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/btn_Payment"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/edt_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_Name"
        app:layout_constraintTop_toTopOf="@+id/edt_Name"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/basket_1" />

    <TextView
        android:id="@+id/txt_int"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_marginTop="28dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toEndOf="@+id/edt_Name"
        app:layout_constraintTop_toBottomOf="@+id/btnMenu" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_foods"
        android:layout_width="405dp"
        android:layout_height="443dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_Payment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_Name"
        app:layout_constraintTop_toBottomOf="@+id/edt_Name" />

</androidx.constraintlayout.widget.ConstraintLayout>